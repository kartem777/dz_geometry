@model dz_geometry.Models.Rectangle

<h2>Rectangle</h2>

<form asp-action="Rectangle" method="post">
    <div class="form-group">
        <label for="Length">Length:</label>
        <input type="number" step="0.01" class="form-control" id="Length" name="Length" value="@Model?.Length" required />
    </div>
    <div class="form-group">
        <label for="Width">Width:</label>
        <input type="number" step="0.01" class="form-control" id="Width" name="Width" value="@Model?.Width" required />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (ViewBag.Area != null)
{
    <h3>Results</h3>
    <p>Area: @ViewBag.Area</p>
    <p>Perimeter: @ViewBag.Perimeter</p>
}
