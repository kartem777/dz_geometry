@model dz_geometry.Models.Circle

<h2>Circle</h2>

<form asp-action="Circle" method="post">
    <div class="form-group">
        <label for="Radius">Radius:</label>
        <input type="number" step="0.01" class="form-control" id="Radius" name="Radius" value="@Model?.Radius" required />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (ViewBag.Area != null)
{
    <h3>Results</h3>
    <p>Area: @ViewBag.Area</p>
    <p>Perimeter: @ViewBag.Perimeter</p>
}
