@model dz_geometry.Models.Square

<h2>Square</h2>

<form asp-action="Square" method="post">
    <div class="form-group">
        <label for="Side">Side Length:</label>
        <input type="number" step="0.01" class="form-control" id="Side" name="Side" value="@Model?.Side" required />
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

@if (ViewBag.Area != null)
{
    <h3>Results</h3>
    <p>Area: @ViewBag.Area</p>
    <p>Perimeter: @ViewBag.Perimeter</p>
}